@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mt-3">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group mt-3">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                <label>Select Image</label>
                <div class="custom-file">
                    <input asp-for="Input.Image" type="file" class="form-control-file custom-file-input" accept=".jpg,.png,.gif,.jpeg" />
                    <label asp-for="Input.Image" class="control-label custom-file-label">Choose</label>
                </div>
            </div>*@

            <div class="form-group mt-3">
                <label asp-for="Input.Image"></label>
                <input type="file" asp-for="Input.Image" class="form-control" accept=".jpg,.png,.gif,.jpeg" />
                <span asp-validation-for="Input.Image" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary mt-3 mb-3">Save</button>
        </form>
    </div>
    <div class="col-md-6">
        <img src="@Model.CurrentImage" class="image-fluid rounded-circle mt-5" width="25%" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}